{
  "name": "bill-tracker",
  "version": "1.0.0",
  "description": "Mobile-first Bill Tracker & Reminder app for iOS and Android",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "ios": "expo run:ios",
    "android": "expo run:android",
    "web": "expo start --web",
    "eject": "expo eject",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "test": "jest"
  },
  "dependencies": {
    "expo": "^51.0.0",
    "expo-sqlite": "^14.0.0",
    "expo-notifications": "^0.28.0",
    "expo-application": "^5.8.0",
    "react": "^18.3.0",
    "react-native": "^0.74.0",
    "react-native-screens": "^3.27.0",
    "react-native-safe-area-context": "^4.8.0",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-reanimated": "^3.6.0",
    "@react-navigation/native": "^6.1.0",
    "@react-navigation/bottom-tabs": "^6.5.0",
    "@react-navigation/stack": "^6.3.0",
    "uuid": "^9.0.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-native": "^0.74.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.3.0",
    "eslint": "^8.53.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
